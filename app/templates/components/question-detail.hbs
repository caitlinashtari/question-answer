<div class="row">
  <div class="col s12 well grey">
    <div class="row">
      <div class="col s6">
        <img class="responsive-img"src={{question.image}}>
      </div>
      <div class="col s6">
        <h6>By {{question.author}}</h6>
        <p>{{question.date}}</p>
        <p>{{question.content}}</p>
      </div>
    </div>
    <h2> Answers </h2>
    <ul>
      {{#each question.answers as |answer|}}
        {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
      {{/each}}
    </ul>

    {{update-question question=question update="update"}}
    <button {{action 'delete' question}}>Delete Question</button>
  </div>
</div>
